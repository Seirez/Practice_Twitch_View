<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.search.SearchFragment">

    <ImageButton
        android:id="@+id/custom_button"
        android:layout_width="35dp"
        android:layout_height="33dp"
        android:layout_gravity="center"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:background="@color/white"
        android:contentDescription="Custom Button"
        android:scaleType="fitCenter"
        android:src="@drawable/angle_left_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText_main"
        android:layout_width="324dp"
        android:layout_height="23dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/cursorline"
        android:ems="10"
        android:hint="@string/editText_main"
        android:inputType="textFilter"
        android:textColor="@color/purple_500"
        android:textColorHint="#808080"
        android:textCursorDrawable="@drawable/cursor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/custom_button"
        app:layout_constraintTop_toTopOf="@+id/custom_button" />


</androidx.constraintlayout.widget.ConstraintLayout>